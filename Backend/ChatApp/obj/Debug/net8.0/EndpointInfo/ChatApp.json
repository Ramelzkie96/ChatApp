        "required": [
          "content"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "senderId": {
            "type": "integer",
            "format": "int32"
          },
          "receiverId": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "maxLength": 2000,
            "minLength": 1,
            "type": "string"
          },
          "sentAt": {
            "type": "string",
            "format": "date-time"
          },
          "isRead": {
